<Window x:Class="SerializationDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Serialization Demo" Height="350" Width="525">
    <Grid>
        <Button Content="Serialize to Binary" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Click="SerializeToBinary_Click"/>
        <Button Content="Deserialize from Binary" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="150" Click="DeserializeFromBinary_Click"/>

        <Button Content="Serialize to XML" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="150" Click="SerializeToXml_Click"/>
        <Button Content="Deserialize from XML" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="150" Click="DeserializeFromXml_Click"/>

        <Button Content="Serialize to JSON" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="150" Click="SerializeToJson_Click"/>
        <Button Content="Deserialize from JSON" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="150" Click="DeserializeFromJson_Click"/>

        <TextBox x:Name="OutputTextBox" HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top" Width="300" Height="300"/>
    </Grid>
</Window>